                  </RadioButton>
                </toggles>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </ToggleButtonGroup>
            <Label text="Ordernar por:">
               <font>
                  <Font name="Impact" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <ComboBox prefWidth="150.0">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </ComboBox>
            <Label text="Filtrar por:">
               <font>
                  <Font name="Impact" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Label text="Paciente">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField prefWidth="189.0">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Label text="Data">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <DatePicker>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </DatePicker>
            <Label text="Médico">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField prefWidth="189.0">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin></TextField>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TableView prefHeight="478.0" prefWidth="595.0">
               <columns>
                  <TableColumn prefWidth="108.0" text="Data" />
                  <TableColumn prefWidth="174.0" text="Paciente" />
                  <TableColumn minWidth="0.0" prefWidth="132.0" text="Médico" />
               </columns>
            </TableView>
            <Button fx:id="btn_return" mnemonicParsing="false" onAction="#loadAdministradorView" prefHeight="25.0" prefWidth="322.0" text="Retornar">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
